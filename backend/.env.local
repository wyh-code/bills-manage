# ==================== 应用配置 ====================
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=24
DATASOURCE=authmate

# ==================== 种子用户 ====================
SEED_USERS=openid1,openid2,openid3

# ==================== 应用运行配置 ====================
APP_HOST=0.0.0.0
APP_PORT=7788
APP_DEBUG=true

# ==================== 日志配置 ====================
LOG_DIR=logs
LOG_FILE=app.log
LOG_LEVEL=INFO
LOG_ENABLE_FILE=true
LOG_ENABLE_CONSOLE=true

# ==================== 数据库配置 ====================
DB_DIR=database
DB_PATH=bills.db

# ==================== 文件存储配置 ====================
STORAGE_DIR=storages

# ==================== DeepSeek配置 ====================
DEEPSEEK_CHAT_MODEL=deepseek-chat
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# ==================== 支付宝配置 ====================
ALIPAY_APP_ID=your-alipay-app-id
ALIPAY_PRIVATE_KEY=-----BEGIN RSA PRIVATE KEY-----\nYour Private Key Here\n-----END RSA PRIVATE KEY-----
ALIPAY_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\nAlipay Public Key Here\n-----END PUBLIC KEY-----
ALIPAY_GATEWAY=https://openapi.alipay.com/gateway.do
ALIPAY_NOTIFY_URL=https://yourdomain.com/api/accounts/recharge/alipay/notify
ALIPAY_RETURN_URL=https://yourdomain.com/recharge/success
ALIPAY_DEBUG=false